<Window xmlns="https://github.com/avaloniaui" 
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
  xmlns:vm="clr-namespace:ControlRoom.ViewModels;assembly=ControlRoom" Icon="resm:ControlRoom.Assets.avalonia-logo.ico" Title="ControlRoom" Width="800" Height="800">

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>

  <StackPanel>
    <Canvas Top="0" Left="0" Height="400" Width="800" Background="#eeeeee">
      <Canvas Top="30" Left="200" Width="400" Height="200" Background="#212121">
        <TextBlock Text="{Binding Speed}" FontSize="50" Canvas.Top="75" Canvas.Left="180" Foreground="#ffffff"/>
      </Canvas>
    </Canvas>
  </StackPanel>
</Window>